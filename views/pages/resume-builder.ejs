<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume Builder</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Create Your Resume</h1>
        <div id="template-container"></div>

        <div class="resume-builder-step active" id="step-1">
            <h2>Personal Information</h2>
            <form id="personal-info-form">
                <input type="text" name="fullName" placeholder="Full Name" required>
                <input type="email" name="email" placeholder="Email" required>
                <input type="text" name="phone" placeholder="Phone">
                <input type="text" name="address" placeholder="Address">
                <button type="submit">Next</button>
            </form>
        </div>

        <div class="resume-builder-step" id="step-2">
            <h2>Education</h2>
            <input type="text" id="school" placeholder="School" required>
            <input type="text" id="degree" placeholder="Degree" required>
            <input type="text" id="graduation-year" placeholder="Graduation Year" required>
            <button id="add-education-btn">Add Education</button>
            <ul id="education-entries"></ul>
            <button onclick="resumeBuilder.showNextStep()">Next</button>
        </div>

        <div class="resume-builder-step" id="step-3">
            <h2>Work Experience</h2>
            <button id="add-work-exp-btn">Add Work Experience</button>
            <button onclick="resumeBuilder.showNextStep()">Next</button>
        </div>

        <div class="resume-builder-step" id="step-4">
            <h2>Skills</h2>
            <button id="add-skill-btn">Add Skill</button>
            <button onclick="resumeBuilder.showNextStep()">Next</button>
        </div>

        <div class="resume-builder-step" id="step-5">
            <h2>Review and Submit</h2>
            <button id="submit-resume-btn">Submit Resume</button>
        </div>
    </div>
    <script src="/js/resume-builder.js"></script>
</body>
</html>